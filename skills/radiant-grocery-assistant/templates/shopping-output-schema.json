{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GroceryPlanningOutput",
  "type": "object",
  "properties": {
    "meal_plan": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "day": {"type": "string"},
          "meal": {"type": "string"}
        },
        "required": ["day", "meal"]
      }
    },
    "shopping_by_section": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "section": {"type": "string"},
          "items": {
            "type": "array",
            "items": {"type": "string"}
          }
        },
        "required": ["section", "items"]
      }
    },
    "sale_swaps": {
      "type": "array",
      "items": {"type": "string"}
    },
    "assumptions": {
      "type": "array",
      "items": {"type": "string"}
    }
  },
  "required": ["meal_plan", "shopping_by_section", "sale_swaps", "assumptions"]
}
